<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/apie_theme_dimension_80"
    android:background="@color/apie_color_white"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/apie_theme_dimension_8"
        android:layout_marginStart="@dimen/apie_theme_dimension_16"
        android:layout_marginEnd="@dimen/apie_theme_dimension_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="@dimen/apie_theme_dimension_30"
            android:layout_height="@dimen/apie_theme_dimension_30"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="这是主标题"
            android:textColor="@android:color/black"
            android:textSize="@dimen/apie_theme_text_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightIconView"
            android:layout_width="@dimen/apie_theme_dimension_22"
            android:layout_height="@dimen/apie_theme_dimension_22"
            android:layout_gravity="center|end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/leftIconView"
            android:layout_width="@dimen/apie_theme_dimension_22"
            android:layout_height="@dimen/apie_theme_dimension_22"
            android:layout_gravity="center|end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
