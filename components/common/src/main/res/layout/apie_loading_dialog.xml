<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/apie_theme_dimension_44"
    android:layout_height="@dimen/apie_theme_dimension_44"
    android:background="@drawable/apie_view_bg_fill1_corner_8dp"
    android:layout_gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/redLoadingDialogView"
        android:background="@drawable/apie_view_bg_fill1_corner_8dp"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="@dimen/apie_theme_dimension_8"
        android:layout_gravity="center"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_fileName="zhuan_chang.json"
        app:lottie_loop="true" />

    <com.xiaoxun.apie.common.ui.APieLoadingView
        android:id="@+id/loadingView"
        android:layout_gravity="center"
        android:layout_width="@dimen/apie_theme_dimension_35"
        android:layout_height="@dimen/apie_theme_dimension_35" />

</FrameLayout>