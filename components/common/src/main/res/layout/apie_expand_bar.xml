<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/apie_theme_dimension_38"
    android:background="@color/apie_color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/goldLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/apie_theme_dimension_16"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/goldIcon"
            android:layout_width="@dimen/apie_theme_dimension_20"
            android:layout_height="@dimen/apie_theme_dimension_20"
            android:layout_gravity="center"
            android:background="@drawable/apie_expand_gold_icon" />

        <com.xiaoxun.apie.common.ui.ScrollingDigitalAnimation
            android:id="@+id/goldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/apie_theme_dimension_6"
            android:background="@color/apie_color_white"
            android:gravity="center"
            android:textColor="@color/apie_color_6F94F4" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
