<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/apie_theme_dimension_38"
    android:background="@color/apie_color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/goldLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/apie_theme_dimension_16"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/goldIcon"
            android:layout_width="@dimen/apie_theme_dimension_20"
            android:layout_height="@dimen/apie_theme_dimension_20"
            android:background="@drawable/apie_expand_gold_icon" />

        <TextView
            android:id="@+id/goldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/apie_theme_dimension_3"
            android:text="10000"
            android:textColor="@color/apieTheme_colorBlack_alpha_50"
            android:textSize="@dimen/apie_theme_text_13" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
