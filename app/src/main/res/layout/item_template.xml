<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/apie_theme_dimension_150"
    android:layout_marginHorizontal="@dimen/apie_theme_dimension_6"
    android:layout_marginVertical="@dimen/apie_theme_dimension_6"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/apieTheme_colorBlack_alpha_50"
    android:padding="8dp">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black" />
</LinearLayout>
