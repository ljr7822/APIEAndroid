<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/apie_create_plan_fragment_bg">

    <!-- 标题区域-->
    <include
        android:id="@+id/topBar"
        layout="@layout/apie_common_style_top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 滚动部分 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 内容区域-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <!-- 标题区域-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/desireNameInputCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_5"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:layout_marginBottom="@dimen/apie_theme_dimension_10"
                    app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                    app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                    app:cardElevation="@dimen/apie_theme_dimension_0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/nameIcon"
                            android:layout_width="@dimen/apie_theme_dimension_25"
                            android:layout_height="@dimen/apie_theme_dimension_25"
                            android:layout_marginStart="@dimen/apie_theme_dimension_12"
                            android:background="@drawable/apie_create_plan_name_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/nameEdit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/apie_theme_dimension_5"
                            android:layout_marginTop="@dimen/apie_theme_dimension_8"
                            android:layout_marginEnd="@dimen/apie_theme_dimension_8"
                            android:layout_marginBottom="@dimen/apie_theme_dimension_8"
                            android:background="@null"
                            android:hint="@string/apie_create_desire_name_hint"
                            android:maxLines="1"
                            android:textSize="@dimen/apie_theme_dimension_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/nameIcon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- 心愿频次-->
                <LinearLayout
                    android:id="@+id/desireFrequencyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_10"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/desireNameInputCard">

                    <!-- 标题-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/desireFrequencyTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apie_create_desire_frequency_tip"
                            android:textColor="@color/apieTheme_colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/planFrequencyIcon"
                            android:layout_width="@dimen/apie_theme_dimension_16"
                            android:layout_height="@dimen/apie_theme_dimension_16"
                            android:layout_marginStart="@dimen/apie_theme_dimension_4"
                            android:layout_marginTop="@dimen/apie_theme_dimension_2"
                            android:background="@drawable/apie_create_plan_frequency_tip_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/desireFrequencyTitle"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 内容-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/apie_theme_dimension_45"
                        android:layout_marginTop="@dimen/apie_theme_dimension_8"
                        app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                        app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                        app:cardElevation="@dimen/apie_theme_dimension_0"
                        tools:layout_height="@dimen/apie_theme_dimension_60">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/apie_theme_dimension_10"
                            android:layout_marginTop="@dimen/apie_theme_dimension_5"
                            android:layout_marginBottom="@dimen/apie_theme_dimension_5">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/planFrequencyRv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:overScrollMode="never"
                                android:layout_marginEnd="@dimen/apie_theme_dimension_10"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/constraintLayout3"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayout3"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/apie_theme_dimension_45"
                                android:layout_marginEnd="@dimen/apie_theme_dimension_10"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/frequencyOneTip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/apie_create_plan_frequency_one_tip"
                                    android:textColor="@color/apieTheme_colorBlack_alpha_80"
                                    android:textSize="@dimen/apie_theme_text_12"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <EditText
                                    android:id="@+id/frequencyCountEdit"
                                    android:layout_width="@dimen/apie_theme_dimension_30"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="@dimen/apie_theme_dimension_6"
                                    android:layout_marginTop="@dimen/apie_theme_dimension_5"
                                    android:layout_marginEnd="@dimen/apie_theme_dimension_6"
                                    android:layout_marginBottom="@dimen/apie_theme_dimension_5"
                                    android:background="@drawable/apie_cerate_plan_common_edit_bg"
                                    android:gravity="center"
                                    android:hint="1"
                                    android:inputType="number"
                                    android:maxWidth="@dimen/apie_theme_dimension_25"
                                    android:maxLines="1"
                                    android:textColor="@color/apie_color_4770DC"
                                    android:textCursorDrawable="@drawable/apie_custom_common_cursor"
                                    android:textSize="@dimen/apie_theme_text_14"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/frequencyCountTip"
                                    app:layout_constraintStart_toEndOf="@+id/frequencyOneTip"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/frequencyCountTip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/apie_create_plan_frequency_count_tip"
                                    android:textColor="@color/apieTheme_colorBlack_alpha_80"
                                    android:textSize="@dimen/apie_theme_text_12"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- 心愿分组-->
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/desireFrequencyLayout">

                    <!-- 标题-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/desireGroupTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apie_create_desire_group_tip"
                            android:textColor="@color/apieTheme_colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/planGroupIcon"
                            android:layout_width="@dimen/apie_theme_dimension_16"
                            android:layout_height="@dimen/apie_theme_dimension_16"
                            android:layout_marginStart="@dimen/apie_theme_dimension_4"
                            android:layout_marginTop="@dimen/apie_theme_dimension_2"
                            android:background="@drawable/apie_create_plan_frequency_tip_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/desireGroupTitle"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/apie_theme_dimension_45"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/apie_theme_dimension_8">

                        <!-- 分组列表-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/apie_theme_dimension_12"
                            app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                            app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                            app:cardElevation="@dimen/apie_theme_dimension_0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/createGroupLayout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_height="@dimen/apie_theme_dimension_60">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/apie_theme_dimension_5"
                                android:layout_marginBottom="@dimen/apie_theme_dimension_5"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/desireGroupRv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:overScrollMode="never"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:visibility="visible" />

                                <LinearLayout
                                    android:id="@+id/groupLoadingLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/apie_theme_dimension_45"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:visibility="visible">

                                    <com.xiaoxun.apie.common.ui.APieLoadingView
                                        android:id="@+id/groupLoadingView"
                                        android:layout_width="@dimen/apie_theme_dimension_25"
                                        android:layout_height="@dimen/apie_theme_dimension_25"
                                        android:visibility="gone"
                                        app:loading_view_color="@color/apieTheme_colorBlack_alpha_40" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/apie_theme_dimension_3"
                                        android:text="@string/apie_loading_msg"
                                        android:textColor="@color/apieTheme_colorBlack_alpha_40"
                                        android:textSize="@dimen/apie_theme_text_11" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/groupErrorTips"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/apie_theme_dimension_45"
                                    android:gravity="center"
                                    android:text="@string/apie_create_plan_load_group_error_msg"
                                    android:textColor="@color/apieTheme_colorBlack_alpha_40"
                                    android:textSize="@dimen/apie_theme_text_11"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:visibility="visible" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- 创建分组按钮-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/createGroupLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apie_cerate_plan_common_btn_bg"
                            android:padding="@dimen/apie_theme_dimension_3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/apie_create_plan_add_group_icon"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/createGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/apie_create_plan_add_new_group_tip"
                                android:textColor="@color/apieTheme_colorBlack_alpha_40"
                                android:textSize="@dimen/apie_theme_text_8"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- 心愿价格-->
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    tools:layout_editor_absoluteX="16dp">

                    <!-- 标题-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/desirePriceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apie_create_desire_price_title"
                            android:textColor="@color/apieTheme_colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/planAwardIcon"
                            android:layout_width="@dimen/apie_theme_dimension_16"
                            android:layout_height="@dimen/apie_theme_dimension_16"
                            android:layout_marginStart="@dimen/apie_theme_dimension_4"
                            android:layout_marginTop="@dimen/apie_theme_dimension_2"
                            android:background="@drawable/apie_create_plan_frequency_tip_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/desirePriceTitle"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/apie_theme_dimension_8"
                        app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                        app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                        app:cardElevation="@dimen/apie_theme_dimension_0">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/awardLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/apie_theme_dimension_5"
                                android:paddingBottom="@dimen/apie_theme_dimension_5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/awardTip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/apie_theme_dimension_10"
                                    android:text="单次兑换心愿需要花费"
                                    android:textColor="@color/apieTheme_colorBlack_alpha_70"
                                    android:textSize="@dimen/apie_theme_text_12"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.xiaoxun.apie.common.ui.NumberStepperView
                                    android:id="@+id/awardCount"
                                    android:layout_width="wrap_content"
                                    android:layout_marginStart="@dimen/apie_theme_dimension_10"
                                    android:layout_height="wrap_content"
                                    app:defaultNumber="1"
                                    app:editTextColor="@color/apie_color_6F94F4"
                                    app:step="1"/>

                                <EditText
                                    android:visibility="gone"
                                    android:id="@+id/awardCountEdit"
                                    android:layout_width="@dimen/apie_theme_dimension_50"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/apie_theme_dimension_5"
                                    android:background="@drawable/apie_cerate_plan_common_edit_bg"
                                    android:gravity="center"
                                    android:hint="1"
                                    android:inputType="number"
                                    android:maxWidth="@dimen/apie_theme_dimension_25"
                                    android:maxLines="1"
                                    android:textColor="@color/apie_color_4770DC"
                                    android:textCursorDrawable="@drawable/apie_custom_common_cursor"
                                    android:textSize="@dimen/apie_theme_text_14"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/awardTip"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:id="@+id/awardIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/apie_theme_dimension_10"
                                    android:background="@drawable/apie_plan_gold_icon"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/awardCountEdit"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <!-- 心愿周期-->
                <LinearLayout
                    android:id="@+id/desireValidityTimeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <!-- 标题-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/desireValidityTimeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apie_create_desire_validity_time_tip"
                            android:textColor="@color/apieTheme_colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/planValidityTimeTitleIcon"
                            android:layout_width="@dimen/apie_theme_dimension_16"
                            android:layout_height="@dimen/apie_theme_dimension_16"
                            android:layout_marginStart="@dimen/apie_theme_dimension_4"
                            android:layout_marginTop="@dimen/apie_theme_dimension_2"
                            android:background="@drawable/apie_create_plan_frequency_tip_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/desireValidityTimeTitle"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/apie_theme_dimension_8"
                        app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                        app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                        app:cardElevation="@dimen/apie_theme_dimension_0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/apie_theme_dimension_40"
                            android:gravity="center"
                            android:paddingStart="@dimen/apie_theme_dimension_10"
                            android:paddingEnd="@dimen/apie_theme_dimension_10">

                            <TextView
                                android:id="@+id/desireWill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/apie_theme_dimension_10"
                                android:text="心愿于"
                                android:textColor="@color/apieTheme_colorBlack_alpha_70"
                                android:textSize="@dimen/apie_theme_text_10"
