<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/apie_create_plan_fragment_bg">

    <!-- 标题区域-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/apie_theme_dimension_40"
        android:layout_marginTop="@dimen/apie_theme_dimension_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/closeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/apie_theme_dimension_12"
            android:background="@drawable/apie_top_bar_close_icon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apie_create_thing_title"
            android:textColor="@color/apieTheme_colorBlack"
            android:textSize="@dimen/apie_theme_text_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/confirmIcon"
            app:layout_constraintStart_toEndOf="@+id/closeIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/confirmIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/apie_theme_dimension_12"
            android:background="@drawable/apie_top_bar_confirm_icon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 滚动部分 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 内容区域-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <!-- 物品图片-->
                <LinearLayout
                    android:id="@+id/addIcon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/apie_storage_add_image_btn_bg"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/thingIcon"
                    app:layout_constraintEnd_toEndOf="@+id/thingIcon"
                    app:layout_constraintStart_toStartOf="@+id/thingIcon"
                    app:layout_constraintTop_toTopOf="@+id/thingIcon">

                    <ImageView
                        android:layout_width="@dimen/apie_theme_dimension_20"
                        android:layout_height="@dimen/apie_theme_dimension_20"
                        android:background="@drawable/apie_create_desire_add_image_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/thingIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <!-- 物品图片-->
                <ImageView
                    android:id="@+id/thingIcon"
                    android:layout_width="@dimen/apie_theme_dimension_80"
                    android:layout_height="@dimen/apie_theme_dimension_80"
                    android:layout_marginTop="@dimen/apie_theme_dimension_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 物品标题-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/thingNameInputCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:layout_marginBottom="@dimen/apie_theme_dimension_10"
                    app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                    app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                    app:cardElevation="@dimen/apie_theme_dimension_0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thingIcon">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/nameIcon"
                            android:layout_width="@dimen/apie_theme_dimension_25"
                            android:layout_height="@dimen/apie_theme_dimension_25"
                            android:layout_marginStart="@dimen/apie_theme_dimension_12"
                            android:background="@drawable/apie_create_plan_name_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/nameEdit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/apie_theme_dimension_5"
                            android:layout_marginTop="@dimen/apie_theme_dimension_8"
                            android:layout_marginEnd="@dimen/apie_theme_dimension_8"
                            android:layout_marginBottom="@dimen/apie_theme_dimension_8"
                            android:background="@null"
                            android:hint="@string/apie_create_thing_name_hint"
                            android:maxLines="1"
                            android:textSize="@dimen/apie_theme_dimension_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/nameIcon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- 物品分组-->
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thingNameInputCard">

                    <!-- 标题-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/thingGroupTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apie_create_thing_group_tip"
                            android:textColor="@color/apieTheme_colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/planGroupIcon"
                            android:layout_width="@dimen/apie_theme_dimension_16"
                            android:layout_height="@dimen/apie_theme_dimension_16"
                            android:layout_marginStart="@dimen/apie_theme_dimension_4"
                            android:layout_marginTop="@dimen/apie_theme_dimension_2"
                            android:background="@drawable/apie_create_plan_frequency_tip_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/thingGroupTitle"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/apie_theme_dimension_45"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/apie_theme_dimension_8">

                        <!-- 分组列表-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/apie_theme_dimension_12"
                            app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                            app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                            app:cardElevation="@dimen/apie_theme_dimension_0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/createGroupLayout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_height="@dimen/apie_theme_dimension_60">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/apie_theme_dimension_10"
                                android:layout_marginTop="@dimen/apie_theme_dimension_5"
                                android:layout_marginEnd="@dimen/apie_theme_dimension_10"
                                android:layout_marginBottom="@dimen/apie_theme_dimension_5"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/thingGroupRv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:overScrollMode="never"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:visibility="visible" />

                                <LinearLayout
                                    android:id="@+id/groupLoadingLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/apie_theme_dimension_45"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:visibility="visible">

                                    <com.xiaoxun.apie.common.ui.APieLoadingView
                                        android:id="@+id/groupLoadingView"
                                        android:layout_width="@dimen/apie_theme_dimension_25"
                                        android:layout_height="@dimen/apie_theme_dimension_25"
                                        android:visibility="gone"
                                        app:loading_view_color="@color/apieTheme_colorBlack_alpha_40" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/apie_theme_dimension_3"
                                        android:text="@string/apie_loading_msg"
                                        android:textColor="@color/apieTheme_colorBlack_alpha_40"
                                        android:textSize="@dimen/apie_theme_text_11" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/groupErrorTips"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/apie_theme_dimension_45"
                                    android:gravity="center"
                                    android:text="@string/apie_create_plan_load_group_error_msg"
                                    android:textColor="@color/apieTheme_colorBlack_alpha_40"
                                    android:textSize="@dimen/apie_theme_text_11"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:visibility="visible" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- 创建分组按钮-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/createGroupLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apie_cerate_plan_common_btn_bg"
                            android:padding="@dimen/apie_theme_dimension_3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/apie_create_plan_add_group_icon"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/createGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/apie_create_plan_add_new_group_tip"
                                android:textColor="@color/apieTheme_colorBlack_alpha_40"
                                android:textSize="@dimen/apie_theme_text_8"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- 物品状态-->
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    tools:layout_editor_absoluteX="16dp">

                    <!-- 标题-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/thingStatusTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apie_create_thing_status_title"
                            android:textColor="@color/apieTheme_colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/planAwardIcon"
                            android:layout_width="@dimen/apie_theme_dimension_16"
                            android:layout_height="@dimen/apie_theme_dimension_16"
                            android:layout_marginStart="@dimen/apie_theme_dimension_4"
                            android:layout_marginTop="@dimen/apie_theme_dimension_2"
                            android:background="@drawable/apie_create_plan_frequency_tip_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/thingStatusTitle"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/apie_theme_dimension_8"
                        app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                        app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                        app:cardElevation="@dimen/apie_theme_dimension_0">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/statusLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/apie_theme_dimension_5"
                                android:paddingBottom="@dimen/apie_theme_dimension_5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/statusRecyclerView"
                                    android:layout_width="match_parent"
                                    android:overScrollMode="never"
                                    android:layout_height="match_parent" />


                            </LinearLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- 物品价格-->
                <LinearLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:layout_editor_absoluteX="16dp">

                    <!-- 标题-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/thingPriceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apie_create_thing_price_tip"
                            android:textColor="@color/apieTheme_colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/thingPriceIcon"
                            android:layout_width="@dimen/apie_theme_dimension_16"
                            android:layout_height="@dimen/apie_theme_dimension_16"
                            android:layout_marginStart="@dimen/apie_theme_dimension_4"
                            android:layout_marginTop="@dimen/apie_theme_dimension_2"
                            android:background="@drawable/apie_create_plan_frequency_tip_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/thingPriceTitle"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/apie_theme_dimension_8"
                        app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                        app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                        app:cardElevation="@dimen/apie_theme_dimension_0">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/apie_theme_dimension_5"
                            android:paddingTop="@dimen/apie_theme_dimension_4"
                            android:paddingEnd="@dimen/apie_theme_dimension_5"
                            android:paddingBottom="@dimen/apie_theme_dimension_4">

                            <ImageView
                                android:layout_width="@dimen/apie_theme_dimension_18"
                                android:layout_height="@dimen/apie_theme_dimension_15"
                                android:id="@+id/cnyIcon"
                                android:layout_marginStart="@dimen/apie_theme_dimension_4"
                                android:padding="@dimen/apie_theme_dimension_4"
                                android:background="@drawable/apie_thing_price_cny_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <EditText
                                android:id="@+id/thingPriceTitleEdit"
                                android:layout_width="0dp"
                                android:layout_marginStart="@dimen/apie_theme_dimension_10"
                                android:layout_height="wrap_content"
                                android:background="@drawable/apie_cerate_plan_common_edit_null_bg"
                                android:gravity="start"
                                android:hint="入手价格"
                                android:padding="@dimen/apie_theme_dimension_8"
                                android:inputType="number"
                                android:textStyle="bold"
                                android:textColor="@color/apie_color_6b84fc"
                                android:textCursorDrawable="@drawable/apie_custom_common_cursor"
                                android:textSize="@dimen/apie_theme_text_15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/cnyIcon"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <!-- 物品时间-->
                <LinearLayout
                    android:id="@+id/thingTimeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/priceLayout">

                    <!-- 物品购买时间-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/apie_theme_dimension_12"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <!-- 标题-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/thingBuyTimeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/apie_create_thing_buy_time_tip"
                                android:textColor="@color/apieTheme_colorBlack"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/thingBuyTimeIcon"
                                android:layout_width="@dimen/apie_theme_dimension_16"
                                android:layout_height="@dimen/apie_theme_dimension_16"
                                android:layout_marginStart="@dimen/apie_theme_dimension_4"
                                android:layout_marginTop="@dimen/apie_theme_dimension_2"
                                android:background="@drawable/apie_create_plan_frequency_tip_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/thingBuyTimeTitle"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/apie_theme_dimension_8"
                            app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                            app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                            app:cardElevation="@dimen/apie_theme_dimension_0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/apie_theme_dimension_40"
                                android:gravity="start|center"
                                android:paddingStart="@dimen/apie_theme_dimension_10"
                                android:paddingEnd="@dimen/apie_theme_dimension_10">


                                <TextView
                                    android:id="@+id/buyTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/apie_theme_dimension_5"
                                    android:paddingTop="@dimen/apie_theme_dimension_4"
                                    android:paddingEnd="@dimen/apie_theme_dimension_5"
                                    android:paddingBottom="@dimen/apie_theme_dimension_4"
                                    android:text="2025-12-31"
                                    android:textColor="@color/apie_color_6b84fc"
                                    android:textSize="@dimen/apie_theme_text_15"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- 保修期-->
                    <LinearLayout
                        android:id="@+id/thingWarrantyTimeLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- 标题-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/thingWarrantyTimeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/apie_create_thing_warranty_time_tip"
                                android:textColor="@color/apieTheme_colorBlack"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/thingWarrantyTimeIcon"
                                android:layout_width="@dimen/apie_theme_dimension_16"
                                android:layout_height="@dimen/apie_theme_dimension_16"
                                android:layout_marginStart="@dimen/apie_theme_dimension_4"
                                android:layout_marginTop="@dimen/apie_theme_dimension_2"
                                android:background="@drawable/apie_create_plan_frequency_tip_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/thingWarrantyTimeTitle"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/apie_theme_dimension_8"
                            app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                            app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                            app:cardElevation="@dimen/apie_theme_dimension_0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/apie_theme_dimension_40"
                                android:gravity="start|center"
                                android:paddingStart="@dimen/apie_theme_dimension_10"
                                android:paddingEnd="@dimen/apie_theme_dimension_10">


                                <TextView
                                    android:id="@+id/stopTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/apie_theme_dimension_5"
                                    android:paddingTop="@dimen/apie_theme_dimension_4"
                                    android:paddingEnd="@dimen/apie_theme_dimension_5"
                                    android:paddingBottom="@dimen/apie_theme_dimension_4"
                                    android:text="2025-12-31"
                                    android:textColor="@color/apie_color_6b84fc"
                                    android:textSize="@dimen/apie_theme_text_15"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- 物品描述-->
                <LinearLayout
                    android:id="@+id/desireDescLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/apie_theme_dimension_16"
                    android:layout_marginTop="@dimen/apie_theme_dimension_15"
                    android:layout_marginEnd="@dimen/apie_theme_dimension_16"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thingTimeLayout"
                    tools:layout_editor_absoluteX="16dp">

                    <!-- 标题-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/thingDescTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apie_create_thing_desc_tip"
                            android:textColor="@color/apieTheme_colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/desireDescIcon"
                            android:layout_width="@dimen/apie_theme_dimension_16"
                            android:layout_height="@dimen/apie_theme_dimension_16"
                            android:layout_marginStart="@dimen/apie_theme_dimension_4"
                            android:layout_marginTop="@dimen/apie_theme_dimension_2"
                            android:background="@drawable/apie_create_plan_frequency_tip_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/thingDescTitle"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/apie_theme_dimension_8"
                        app:cardBackgroundColor="@color/apieTheme_colorGrayLevel1_alpha_4"
                        app:cardCornerRadius="@dimen/apie_theme_dimension_8"
                        app:cardElevation="@dimen/apie_theme_dimension_0">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/thingDescEdit"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/apie_theme_dimension_120"
                                android:background="@drawable/apie_cerate_plan_common_edit_null_bg"
                                android:gravity="start"
                                android:hint="在这里填写这个物品的描述或备注"
                                android:padding="@dimen/apie_theme_dimension_8"
                                android:textColor="@color/apieTheme_colorBlack_alpha_70"
                                android:textCursorDrawable="@drawable/apie_custom_common_cursor"
                                android:textSize="@dimen/apie_theme_text_13"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 底部按钮-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/apie_theme_dimension_35"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cancelLayout"
            android:layout_width="110dp"
            android:layout_height="@dimen/apie_theme_dimension_40"
            android:layout_marginTop="@dimen/apie_theme_dimension_10"
            android:background="@drawable/apie_common_cancel_btn_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cancelBtnTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apie_create_plan_cancel_btn_tip"
                android:textColor="@color/apie_color_4d6bfe"
                android:textSize="@dimen/apie_theme_text_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/submitLayout"
            android:layout_width="110dp"
            android:layout_height="@dimen/apie_theme_dimension_40"
            android:layout_marginTop="@dimen/apie_theme_dimension_10"
            android:background="@drawable/apie_common_submit_btn_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/submitBtnTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apie_create_plan_submit_btn_tip"
                android:textColor="@color/apie_color_white"
                android:textSize="@dimen/apie_theme_text_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.xiaoxun.apie.common.ui.APieLoadingView
                android:id="@+id/submitLoading"
                android:layout_width="@dimen/apie_theme_dimension_20"
                android:layout_height="@dimen/apie_theme_dimension_20"
                app:layout_constraintBottom_toBottomOf="@+id/submitBtnTip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/submitBtnTip" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>