<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/apieTheme_colorTransparent"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

    <androidx.cardview.widget.CardView
        android:id="@+id/useStatusLayout"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="@dimen/apie_theme_dimension_5"
        android:layout_marginVertical="@dimen/apie_theme_dimension_3"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/apieTheme_colorTransparent"
        app:cardCornerRadius="@dimen/apie_theme_dimension_3"
        app:cardElevation="@dimen/apie_theme_dimension_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/useStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/apie_theme_dimension_8"
            android:paddingVertical="@dimen/apie_theme_dimension_4"
            android:text="使用中"
            android:textColor="@color/apieTheme_colorGrayLevel1_alpha_60"
            android:textSize="@dimen/apie_theme_text_13" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>