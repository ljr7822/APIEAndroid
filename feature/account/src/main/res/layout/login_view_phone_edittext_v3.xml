<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage,RtlHardcoded,ContentDescription">

    <TextView
        android:id="@+id/mAreaNumberTextView"
        style="@style/ApieTheme.fontNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/apie_login_load_more_icon"
        android:drawablePadding="5dp"
        android:text="@string/login_phone_prefix"
        android:textColor="@color/apieTheme_colorGrayLevel1_alpha_80"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mPhoneNumberEditText"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:gravity="center"
        android:id="@+id/mCancelInputImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="5dp"
        android:src="@drawable/apie_login_delete_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/mPhoneNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/mCancelInputImageView"
        android:layout_toRightOf="@id/mAreaNumberTextView"
        android:background="@null"
        android:hint="@string/login_input_phone"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@color/apieTheme_colorGrayLevel1"
        android:textColorHint="@color/reds_Disabled"
        android:textSize="@dimen/apie_theme_dimension_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextFields" />
</androidx.constraintlayout.widget.ConstraintLayout>